#include<stdio.h>
int main()
{
    int a[5], b[5], s1, s2, i, k, c[10];
    printf("Enter Array 1 Size: ");
    scanf("%d", &s1);
    printf("Enter Array 1 Elements: ");
    for(i=0; i<s1; i++)
    {
        scanf("%d", &a[i]);
        c[i] = a[i];
    }
    k = i;
    printf("\nEnter Array 2 Size: ");
    scanf("%d", &s2);
    printf("Enter Array 2 Elements: ");
    for(i=0; i<s2; i++)
    {
        scanf("%d", &b[i]);
        c[k] = b[i];
        k++;
    }
    printf("\narray after merging is:\n");
    for(i=0; i<k; i++)
        printf("%d ", c[i]);
}
    
